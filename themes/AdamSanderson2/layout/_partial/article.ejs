<article id="<%= post.layout %>-<%= post._id %>" class="article article-type-<%= post.layout %> row h-entry" itemscope itemprop="blogPost">
  <div class="article-inner col-lg-offset-2 col-lg-8 col-md-offset-1 col-md-10">
    <%- partial('post/gallery') %>
    <% if ((is_home() || is_archive() || is_category() || is_tag())
      && (post.link || post.title)){ %>
      <header class="article-header">
        <%- partial('post/title', {class_name: 'article-title'}) %>
        <%- partial('post/date', {class_name: 'article-date', date_format: null}) %>
      </header>
    <% } %>
    <div class="article-entry e-content" itemprop="articleBody">
      <% if (is_home() || is_archive() || is_category() || is_tag()){ %>
        <% if (post.excerpt && index){ %>
          <!--<%- thumbnail(post.content, 'thumbnail') %>-->
          <%- post_home(post.excerpt) %>
          <% if (theme.excerpt_link){ %>
            <p class="article-more-link">
              <a href="<%- config.root %><%- post.path %>#more"><%= theme.excerpt_link %></a>
            </p>
          <% } %>
        <% } else { %>
          <%- post_home(post.content) %>
        <% } %>
        <footer class="article-footer">
          <% if (post.comments && config.disqus_shortname){ %>
            <a href="<%- post.permalink %>#disqus_thread" class="article-comment-link">Comments</a>
          <% } %>
          <%- partial('post/category') %>
          <%- partial('post/tag') %>
        </footer>
      <% } else { %>
        <%- post.content %>
      <% } %>
    </div>
  </div>
</article>
<% if (!index && post.comments && config.disqus_shortname && comment){ %>
<section id="comments">
  <div id="disqus_thread">
    <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
  </div>
</section>
<% } %>
