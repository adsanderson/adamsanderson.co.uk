.header
  background-color: color-link

$logo-text
  text-decoration: none
  color: color-white
  font-weight: 300
  linkTransition()
  TextShadowHelper3()

.logo
  @extend $logo-text
  font-size: logo-size
  line-height: 1.4em
  font-weight: bold
  display: flex
  align-items: center
  max-width: 670px
  margin: 0 auto;
  
.logo--title
  flex: 3
  fill: color-white
  transition: fill 0.2s, text-shadow 0.5s
  align-self: flex-end
  &:hover
    fill: color-secondary
    TextShadowHelper4()
  
.logo--img
  flex: 1
  align-self: flex-start
  margin-right: 1.2rem
  BoxShadowHelper3()
  
.nav
  display: flex;
  flex-wrap: wrap;
  margin: 20px 0 0 0
  padding: 0 0 20px 0
  
